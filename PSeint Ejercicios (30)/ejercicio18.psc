Proceso ejercicio18
	//18. Pedir un número e indicar si es positivo o negativo.
	
	//Definir variables
	definir numA, positivo, negativo Como Real;
	
	//Proceso 
	//Salida
	Escribir "Digite el numero que desee";
	//Entrada
	Leer numA;
	
	
	Si numA<0 Entonces
		Escribir "El numero es negativo";
	SiNo
		Si numA>0 Entonces
			Escribir "El numero es positivo";
		FinSi
		
	FinSi
	
	
FinProceso
